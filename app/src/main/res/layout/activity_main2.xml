<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:background="@color/silver"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:onClick="CalculateGPA"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/curvedbtn"
        android:text="Calculate GPA"
        android:layout_height="0dp">

    </Button>
    <Button
        android:id="@+id/share_app_btn"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:onClick="ShareApp"
        android:text="Share App"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/curvedbtn2"
        android:layout_height="0dp">

    </Button>
    <Button
        android:id="@+id/rate_us_btn"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Rate App"
        android:onClick="RateApp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/curvedbtn"
        android:layout_height="0dp">

    </Button>
    <Button
        android:id="@+id/more_app_btn"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:onClick="MoreApp"
        android:text="More Apps"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/curvedbtn2"
        android:layout_height="0dp">

    </Button>
    <Button
        android:id="@+id/about_app_btn"
        android:layout_width="match_parent"
        android:text="About App"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:onClick="AboutApp"
        android:background="@drawable/curvedbtn"
        android:layout_height="0dp">

    </Button>
</LinearLayout>
